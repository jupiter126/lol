#!/bin/bash
dependencies="mcrypt"
f_dependency
function f_cypher_Twofish_mcrypt {
####################   CRYPT   ####################
echo "crypting file using with Twofish - mcrypt"
f_randpass 800 0
mcrypt --no-openpgp -q "$directory/$filename" -k "$frandom" -a twofish 2>>/dev/null
mv $directory/$filename.nc $directory/$filename
###################   DECRYPT   ###################
echo "echo \"decrypting layer $layer using using Twofish - mcrypt\"" >> $directory/$filename-keys/$layer
echo "mv $filename $filename.nc" >> $directory/$filename-keys/$layer
echo "mcrypt --no-openpgp -q -d \"$filename.nc\" -k \"$frandom\" -a twofish 2>>/dev/null" >> $directory/$filename-keys/$layer
echo "rm $filename.nc" >> $directory/$filename-keys/$layer
}
